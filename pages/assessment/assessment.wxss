.assessment-header {
    margin-bottom: 30rpx;
  }
  
  .header-title {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .header-desc {
    display: block;
    font-size: 26rpx;
    color: #666;
  }
  
  .assessment-types {
    margin-bottom: 30rpx;
  }
  
  .type-card {
    display: flex;
    align-items: center;
    padding: 30rpx;
    margin-bottom: 20rpx;
    border-left: 8rpx solid #4CAF50;
  }
  
  .type-card:last-child {
    margin-bottom: 0;
  }
  
  .type-icon {
    font-size: 64rpx;
    margin-right: 24rpx;
  }
  
  .type-info {
    flex: 1;
  }
  
  .type-title {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .type-desc {
    display: block;
    font-size: 24rpx;
    color: #666;
  }
  
  .type-status {
    text-align: right;
  }
  
  .last-score {
    display: block;
    font-size: 24rpx;
    color: #4CAF50;
    margin-bottom: 8rpx;
  }
  
  .take-test {
    display: block;
    font-size: 24rpx;
    color: #2196F3;
  }
  
  .current-assessment {
    margin-bottom: 30rpx;
  }
  
  .assessment-result {
    padding: 30rpx 0;
  }
  
  .result-header {
    text-align: center;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .result-title {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 12rpx;
    color: #4CAF50;
  }
  
  .result-score {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .result-analysis, .recommendations {
    margin-bottom: 30rpx;
  }
  
  .analysis-title, .rec-title {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 12rpx;
    color: #333;
  }
  
  .analysis-content {
    display: block;
    font-size: 26rpx;
    line-height: 1.6;
    color: #666;
  }
  
  .rec-list {
    padding-left: 30rpx;
  }
  
  .rec-item {
    display: block;
    font-size: 26rpx;
    line-height: 1.6;
    color: #666;
    margin-bottom: 8rpx;
  }
  
  .result-actions {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    margin-top: 40rpx;
  }
  
  .assessment-history {
    margin-bottom: 30rpx;
  }
  
  .history-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .history-item:last-child {
    border-bottom: none;
  }
  
  .history-info {
    flex: 1;
  }
  
  .history-type {
    display: block;
    font-size: 28rpx;
    margin-bottom: 4rpx;
  }
  
  .history-date {
    display: block;
    font-size: 22rpx;
    color: #999;
  }
  
  .history-score {
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    font-weight: bold;
  }
  
  .history-score.excellent {
    background: #E8F5E8;
    color: #4CAF50;
  }
  
  .history-score.good {
    background: #E3F2FD;
    color: #2196F3;
  }
  
  .history-score.fair {
    background: #FFF8E1;
    color: #FF9800;
  }
  
  .history-score.poor {
    background: #FFEBEE;
    color: #F44336;
  }
  
  .tips-list {
    padding-left: 30rpx;
  }
  
  .tip-item {
    display: block;
    font-size: 26rpx;
    line-height: 1.6;
    color: #666;
    margin-bottom: 12rpx;
  }