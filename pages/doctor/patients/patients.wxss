.container {
    padding: 20rpx;
    background: #f8f9fa;
    min-height: 100vh;
  }
  
  .stats-overview {
    margin-bottom: 24rpx;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20rpx;
  }
  
  .stat-item {
    text-align: center;
    padding: 20rpx;
  }
  
  .stat-number {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    color: #4CAF50;
    margin-bottom: 8rpx;
  }
  
  .stat-label {
    display: block;
    font-size: 22rpx;
    color: #666;
  }
  
  .search-filter {
    margin-bottom: 24rpx;
  }
  
  .search-box {
    position: relative;
    margin-bottom: 24rpx;
  }
  
  .search-box input {
    width: 100%;
    padding: 24rpx 60rpx 24rpx 24rpx;
    border: 1rpx solid #ddd;
    border-radius: 12rpx;
    font-size: 28rpx;
  }
  
  .search-icon {
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 28rpx;
    color: #999;
  }
  
  .filter-tabs {
    display: flex;
    gap: 20rpx;
  }
  
  .filter-tab {
    padding: 16rpx 32rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #666;
  }
  
  .filter-tab.active {
    background: #4CAF50;
    color: white;
  }
  
  .patient-item {
    margin-bottom: 24rpx;
  }
  
  .patient-header {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
  }
  
  .patient-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #2196F3;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: white;
    margin-right: 24rpx;
  }
  
  .patient-info {
    flex: 1;
  }
  
  .patient-name {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .patient-diagnosis {
    display: block;
    font-size: 24rpx;
    color: #666;
    margin-bottom: 4rpx;
  }
  
  .patient-lastVisit {
    display: block;
    font-size: 22rpx;
    color: #999;
  }
  
  .patient-status {
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 22rpx;
    font-weight: bold;
  }
  
  .patient-status.normal {
    background: #E8F5E8;
    color: #4CAF50;
  }
  
  .patient-status.warning {
    background: #FFEBEE;
    color: #F44336;
  }
  
  .patient-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
    margin-bottom: 24rpx;
    padding: 20rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-label {
    display: block;
    font-size: 22rpx;
    color: #666;
    margin-bottom: 8rpx;
  }
  
  .stat-value {
    display: block;
    font-size: 26rpx;
    font-weight: bold;
    color: #4CAF50;
  }
  
  .stat-value.low {
    color: #F44336;
  }
  
  .stat-value.has-message {
    color: #2196F3;
  }
  
  .patient-actions {
    display: flex;
    gap: 20rpx;
  }
  
  .btn-secondary {
    flex: 1;
    padding: 20rpx;
    background: #f8f9fa;
    color: #666;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    font-size: 26rpx;
  }
  
  .btn-primary {
    flex: 1;
    padding: 20rpx;
    background: #4CAF50;
    color: white;
    border: none;
    border-radius: 8rpx;
    font-size: 26rpx;
  }
  
  .empty-state {
    text-align: center;
    padding: 120rpx 40rpx;
  }
  
  .empty-icon {
    font-size: 80rpx;
    display: block;
    margin-bottom: 24rpx;
  }
  
  .empty-text {
    font-size: 28rpx;
    color: #999;
  }