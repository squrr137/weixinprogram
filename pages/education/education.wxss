.search-box input {
    width: 100%;
    padding: 20rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
  }
  
  .knowledge-categories {
    display: flex;
    overflow-x: auto;
    margin: 30rpx 0;
    padding-bottom: 20rpx;
  }
  
  .category-item {
    padding: 16rpx 32rpx;
    background: #f5f5f5;
    border-radius: 50rpx;
    margin-right: 20rpx;
    white-space: nowrap;
    font-size: 28rpx;
  }
  
  .category-item.active {
    background: #4CAF50;
    color: white;
  }
  
  .knowledge-item {
    margin-bottom: 20rpx;
  }
  
  .item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
  }
  
  .item-title {
    font-size: 32rpx;
    font-weight: bold;
    flex: 1;
  }
  
  .item-type {
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  .item-type.video {
    background: #FFEB3B;
    color: #333;
  }
  
  .item-type.article {
    background: #2196F3;
    color: white;
  }
  
  .item-desc {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
    display: block;
  }
  
  .item-meta {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #999;
  }
  
  .myth-item {
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .myth-question {
    font-size: 28rpx;
    color: #F44336;
    margin-bottom: 12rpx;
  }
  
  .myth-answer {
    font-size: 28rpx;
    color: #4CAF50;
  }