.stats-overview {
    display: flex;
    justify-content: space-around;
    padding: 30rpx 0;
  }
  
  .stat-circle {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .stat-number {
    font-size: 48rpx;
    font-weight: bold;
    color: #4CAF50;
    margin-bottom: 8rpx;
  }
  
  .stat-label {
    font-size: 24rpx;
    color: #666;
  }
  
  .badges-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
    margin-top: 20rpx;
  }
  
  .badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    border-radius: 12rpx;
    text-align: center;
  }
  
  .badge.earned {
    background: #E8F5E8;
    border: 2rpx solid #4CAF50;
  }
  
  .badge.locked {
    background: #f5f5f5;
    border: 2rpx solid #ddd;
    opacity: 0.6;
  }
  
  .badge-icon {
    font-size: 48rpx;
    margin-bottom: 12rpx;
  }
  
  .badge-name {
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .badge-desc {
    font-size: 20rpx;
    color: #666;
  }
  
  .points-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .points-item:last-child {
    border-bottom: none;
  }
  
  .points-info {
    flex: 1;
  }
  
  .points-action {
    display: block;
    font-size: 28rpx;
    margin-bottom: 4rpx;
  }
  
  .points-date {
    font-size: 22rpx;
    color: #999;
  }
  
  .points-change.positive {
    color: #4CAF50;
    font-weight: bold;
  }
  
  .points-change.negative {
    color: #F44336;
    font-weight: bold;
  }
  
  .motivation-text {
    font-size: 32rpx;
    color: #4CAF50;
    text-align: center;
    margin: 30rpx 0;
    display: block;
    font-style: italic;
  }
  
  .reward-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .reward-item:last-child {
    border-bottom: none;
  }
  
  .reward-info {
    flex: 1;
  }
  
  .reward-name {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 4rpx;
  }
  
  .reward-desc {
    display: block;
    font-size: 24rpx;
    color: #666;
  }
  
  .exchange-btn {
    padding: 16rpx 24rpx;
    background: #FF9800;
    color: white;
    border: none;
    border-radius: 8rpx;
    font-size: 24rpx;
  }