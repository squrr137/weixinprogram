.community-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .welcome-message {
    flex: 1;
  }
  
  .welcome-title {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .welcome-desc {
    display: block;
    font-size: 26rpx;
    color: #666;
  }
  
  .community-tabs {
    display: flex;
    background: white;
    border-radius: 12rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 24rpx;
    font-size: 28rpx;
    background: #f8f9fa;
  }
  
  .tab.active {
    background: #4CAF50;
    color: white;
  }
  
  .post-item {
    margin-bottom: 24rpx;
  }
  
  .post-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .post-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .post-user {
    flex: 1;
  }
  
  .username {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 4rpx;
  }
  
  .post-time {
    font-size: 22rpx;
    color: #999;
  }
  
  .post-content {
    font-size: 28rpx;
    line-height: 1.6;
    margin-bottom: 20rpx;
  }
  
  .post-actions {
    display: flex;
    justify-content: space-around;
    border-top: 1rpx solid #eee;
    padding-top: 20rpx;
  }
  
  .action-item {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #666;
  }
  
  .action-item .icon {
    margin-right: 8rpx;
    font-size: 28rpx;
  }
  
  .story-item, .qa-item {
    margin-bottom: 24rpx;
  }
  
  .story-header, .question, .answer {
    margin-bottom: 16rpx;
  }
  
  .story-title {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
  }
  
  .story-author {
    font-size: 24rpx;
    color: #666;
  }
  
  .story-excerpt {
    font-size: 26rpx;
    color: #333;
    line-height: 1.5;
  }
  
  .story-stats {
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
    color: #999;
  }
  
  .q-label, .a-label {
    font-weight: bold;
    color: #4CAF50;
    margin-right: 8rpx;
  }
  
  .q-content, .a-content {
    flex: 1;
    line-height: 1.5;
  }
  
  .expert-info {
    font-size: 22rpx;
    color: #666;
    text-align: right;
    margin-top: 12rpx;
  }
  
  .experts-list {
    margin-top: 20rpx;
  }
  
  .expert-item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .expert-item:last-child {
    border-bottom: none;
  }
  
  .expert-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .expert-info {
    flex: 1;
  }
  
  .expert-name {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 4rpx;
  }
  
  .expert-department {
    font-size: 22rpx;
    color: #666;
  }
  
  .expert-status {
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 22rpx;
  }
  
  .expert-status.online {
    background: #E8F5E8;
    color: #4CAF50;
  }
  
  .expert-status.offline {
    background: #f5f5f5;
    color: #999;
  }