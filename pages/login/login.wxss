.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    flex-direction: column;
  }
  
  .login-header {
    padding: 120rpx 60rpx 80rpx;
    text-align: center;
    color: white;
  }
  
  .app-logo {
    font-size: 80rpx;
    margin-bottom: 30rpx;
  }
  
  .app-title {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .app-subtitle {
    display: block;
    font-size: 28rpx;
    opacity: 0.9;
  }
  
  .role-selection {
    flex: 1;
    background: white;
    border-radius: 40rpx 40rpx 0 0;
    padding: 60rpx 40rpx;
  }
  
  .role-card {
    display: flex;
    align-items: center;
    padding: 40rpx;
    margin-bottom: 30rpx;
    border-radius: 20rpx;
    box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }
  
  .role-card:active {
    transform: scale(0.98);
  }
  
  .role-card.patient {
    background: linear-gradient(135deg, #4CAF50, #45a049);
    color: white;
  }
  
  .role-card.doctor {
    background: linear-gradient(135deg, #2196F3, #1976D2);
    color: white;
  }
  
  .role-card.family {
    background: linear-gradient(135deg, #FF9800, #F57C00);
    color: white;
  }
  
  .role-icon {
    font-size: 60rpx;
    margin-right: 30rpx;
  }
  
  .role-info {
    flex: 1;
  }
  
  .role-name {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .role-desc {
    display: block;
    font-size: 24rpx;
    opacity: 0.9;
  }
  
  .role-arrow {
    font-size: 48rpx;
    font-weight: bold;
  }
  
  .login-footer {
    padding: 40rpx;
    text-align: center;
    background: white;
  }
  
  .footer-text {
    font-size: 24rpx;
    color: #666;
  }