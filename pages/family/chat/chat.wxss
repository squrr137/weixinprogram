page {
  background-color: #F5F7FA;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  /* 留出底部输入框的高度 */
  padding-bottom: 120rpx; 
}

/* 系统消息 */
.system-msg {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.system-text {
  background-color: rgba(0, 0, 0, 0.1);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 消息条目 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.message-item.self {
  flex-direction: row-reverse;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ddd;
  flex-shrink: 0;
}

.content-wrapper {
  max-width: 70%;
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.message-item.self .content-wrapper {
  align-items: flex-end;
}

.nickname {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

/* 气泡 */
.bubble {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  line-height: 1.5;
  position: relative;
  word-wrap: break-word;
}

/* 他人的气泡 (白底) */
.other .bubble {
  background-color: #ffffff;
  color: #333;
  border-top-left-radius: 4rpx; /* 小尖角效果 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 自己的气泡 (蓝底) */
.self .bubble {
  background-color: #007AFF;
  color: #ffffff;
  border-top-right-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,122,255,0.3);
}

/* 底部输入栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #eaeaea;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-sizing: border-box;
  z-index: 100;
}

.input-box {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  margin-right: 20rpx;
}

.input {
  width: 100%;
  font-size: 30rpx;
}

.placeholder-text {
  color: #bbb;
}

.send-btn {
  color: #999;
  font-size: 30rpx;
  font-weight: bold;
  padding: 10rpx 20rpx;
  transition: all 0.3s;
}

.send-btn.active {
  color: #007AFF;
}

.placeholder {
  height: 40rpx;
}