.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 患者卡片 */
.patient-card {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  background: #E8F5E9;
  color: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tag {
  font-size: 24rpx;
  background: #E3F2FD;
  color: #2196F3;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: normal;
  margin-left: 10rpx;
  vertical-align: middle;
}

.diagnosis {
  color: #666;
  font-size: 28rpx;
}

/* 统计行 */
.stats-row {
  display: flex;
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  align-items: center;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.line {
  width: 2rpx;
  height: 60rpx;
  background: #eee;
}

/* 历史记录 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.history-card {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.date-col {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  border-right: 1px solid #f0f0f0;
  margin-right: 20rpx;
}

.detail-col {
  flex: 1;
}

.row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  padding-right: 20rpx;
}

.mood {
  font-size: 28rpx;
  color: #333;
}

.adherence {
  font-size: 24rpx;
  color: #4CAF50;
  background: #E8F5E9;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
}

.adherence.low {
  color: #F44336;
  background: #FFEBEE;
}

.note {
  font-size: 24rpx;
  color: #999;
}

.status-col .dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.dot.perfect { background: #4CAF50; }
.dot.good { background: #FFC107; }
.dot.warning { background: #F44336; }

.empty {
  text-align: center;
  color: #999;
  margin-top: 60rpx;
}