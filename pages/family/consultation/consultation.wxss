page {
  background-color: #F5F7FA;
}

.container {
  padding: 30rpx;
}

/* 医生卡片 */
.doctor-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.1);
  margin-bottom: 40rpx;
}

.doctor-info {
  display: flex;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: #eee;
}

.info-text {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.title {
  font-size: 24rpx;
  color: #666;
  background: #F0F7FF;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: #007AFF;
}

.dept {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  color: #888;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around; /* 平均分布 */
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
  margin-top: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: row; /* 关键：改为横向 row */
  align-items: baseline; /* 让数字和文字底部对齐，视觉更整齐 */
}

.stat-item .num {
  font-size: 36rpx; /* 数字稍微加大 */
  font-weight: bold;
  color: #333;
  margin-right: 8rpx; /* 数字和文字之间的间距 */
  margin-bottom: 0;   /* 去掉之前的底部间距 */
}

/* 调整标签样式 */
.stat-item .label {
  font-size: 24rpx;
  color: #999;
}

/* 服务入口网格 */
.service-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.service-item {
  width: 48%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.icon-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 16rpx;
}

.blue { background: #E6F2FF; color: #007AFF; }
.green { background: #E8FCE8; color: #34C759; }

.service-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.service-desc {
  font-size: 22rpx;
  color: #999;
}

/* 历史记录 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-header .more {
  font-size: 24rpx;
  color: #999;
}

.history-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.card-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.date { color: #999; }

.status {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.status.done { background: #E6F2FF; color: #007AFF; }
.status.wait { background: #FFF0E6; color: #FF9500; }

.question-box, .answer-box {
  display: flex;
  margin-bottom: 16rpx;
}
.answer-box { margin-bottom: 0; margin-top: 20rpx; padding-top: 20rpx; border-top: 1rpx solid #f9f9f9;}

.label {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.question-box .label { background-color: #FF9500; }
.answer-box .label { background-color: #007AFF; }

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}