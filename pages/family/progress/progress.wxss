/* 页面背景 */
page {
  background-color: #F5F7FA;
}

.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

/* 顶部英雄卡片 (渐变风格) */
.hero-card {
  background: linear-gradient(135deg, #007aff 0%, #00c6ff 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 122, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.hero-info {
  z-index: 1;
}

.hero-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.hero-value {
  display: flex;
  align-items: baseline;
}

.hero-value .num {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
}

.hero-value .unit {
  font-size: 32rpx;
  margin-left: 8rpx;
  opacity: 0.8;
}

.hero-tag {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-top: 16rpx;
}

/* 背景装饰图标 */
.hero-icon {
  font-size: 160rpx;
  opacity: 0.15;
  position: absolute;
  right: -20rpx;
  bottom: -40rpx;
  transform: rotate(-15deg);
}

/* 通用图表卡片 */
.chart-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 卡片标题栏 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 标题图标容器 */
.icon-box {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 30rpx;
}

.blue-bg {
  background-color: rgba(0, 122, 255, 0.1);
  color: #007aff;
}

.green-bg {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.orange-bg {
  background-color: rgba(255, 149, 0, 0.1);
  color: #ff9500;
}

/* 图表容器 */
.chart-content {
  width: 100%;
  height: 420rpx; /* 稍微增加高度让图表更舒展 */
}