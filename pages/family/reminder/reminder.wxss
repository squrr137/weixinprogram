.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.header-card {
  background: linear-gradient(135deg, #4CAF50, #81C784);
  padding: 40rpx;
  border-radius: 20rpx;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.header-card .date {
  font-size: 28rpx;
  opacity: 0.9;
}

.header-card .title {
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.header-card .highlight {
  font-weight: bold;
  font-size: 32rpx;
  text-decoration: underline;
}

/* 列表项样式 */
.medication-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.time-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  min-width: 80rpx;
}

.time {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.info-column {
  flex: 1;
}

.med-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.med-dose {
  font-size: 24rpx;
  color: #666;
}

/* 状态样式 */
.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-top: 8rpx;
}
.status-dot.taken { background-color: #4CAF50; }
.status-dot.pending { background-color: #FFC107; }
.status-dot.missed { background-color: #F44336; }

.status-badge {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
}
.status-badge.taken { background-color: #E8F5E9; color: #4CAF50; }
.status-badge.missed { background-color: #FFEBEE; color: #F44336; }

.remind-btn {
  background-color: #FF9800 !important;
  color: white !important;
  font-weight: normal;
  border-radius: 30rpx;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
}