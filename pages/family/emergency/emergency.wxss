page {
  background-color: #F5F7FA;
}

.container {
  padding-bottom: 40rpx;
}

/* 顶部红色区域 */
.sos-area {
  background: linear-gradient(180deg, #FF3B30 0%, #FF6B6B 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 59, 48, 0.3);
}

/* SOS 大按钮 */
.sos-circle {
  width: 260rpx;
  height: 260rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 0 20rpx rgba(255, 255, 255, 0.3);
  margin-bottom: 50rpx;
  animation: pulse 2s infinite; /* 呼吸动画 */
}

@keyframes pulse {
  0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7); }
  70% { transform: scale(1.05); box-shadow: 0 0 0 40rpx rgba(255, 255, 255, 0); }
  100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0); }
}

.sos-text {
  font-size: 64rpx;
  font-weight: 900;
  color: #FF3B30;
  line-height: 1;
}

.sos-sub {
  font-size: 24rpx;
  color: #FF3B30;
  margin-top: 10rpx;
  font-weight: bold;
}

/* 位置按钮 */
.location-btn {
  background-color: rgba(0, 0, 0, 0.2);
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.location-btn .icon {
  margin-right: 10rpx;
}

/* 联系人列表 */
.contact-section {
  padding: 40rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #FF3B30;
}

.contact-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.role {
  font-size: 24rpx;
  background-color: #EFF3F9;
  color: #666;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
  font-weight: normal;
}

.phone {
  font-size: 28rpx;
  color: #999;
}

.call-btn {
  background-color: #E8FCE8;
  color: #34C759;
  padding: 16rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}