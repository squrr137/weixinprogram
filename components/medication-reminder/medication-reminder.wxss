.reminder-component {
    padding: 20rpx 0;
  }
  
  .reminder-item {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .reminder-item:last-child {
    border-bottom: none;
  }
  
  .med-info {
    flex: 1;
  }
  
  .med-name {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 4rpx;
  }
  
  .med-dose {
    display: block;
    font-size: 24rpx;
    color: #666;
  }
  
  .time-settings {
    margin: 0 30rpx;
  }
  
  .time-picker {
    padding: 16rpx 24rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    font-size: 26rpx;
  }
  
  .add-reminder-btn {
    width: 100%;
    margin: 30rpx 0;
    padding: 24rpx;
    background: #f8f9fa;
    border: 2rpx dashed #ddd;
    border-radius: 8rpx;
    color: #666;
    font-size: 28rpx;
  }
  
  .reminder-settings {
    margin-top: 30rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #eee;
  }
  
  .setting-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
  }